{
  "name": "spark-x",
  "version": "1.0.0",
  "description": "Privacy-preserving analytics platform with blockchain integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only server/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "tsc && cd frontend && npm run build",
    "build:contracts": "cd contracts && npx hardhat compile",
    "test": "jest",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:watch": "jest --watch",
    "lint": "npm run lint:server && npm run lint:frontend",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.ts",
    "deploy:contracts:local": "cd contracts && npx hardhat run scripts/deploy.ts --network localhost",
    "node:blockchain": "cd contracts && npx hardhat node",
    "coverage": "jest --coverage && cd contracts && npx hardhat coverage",
    "prepare": "husky install",
    "lint:server": "eslint \"server/**/*.ts\" --fix",
    "lint:frontend": "eslint \"frontend/**/*.{ts,tsx}\" --fix --config frontend/.eslintrc.json --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "cors": "^2.8.5",
    "ethers": "^6.13.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.24.1",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "stripe": "^14.12.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.17.24",
    "@types/otplib": "^7.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "solhint": "^3.6.1",
    "solidity-coverage": "^0.8.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typechain": "^8.3.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Spark-X Team",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "solidity",
    "privacy",
    "analytics"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
